.containerprojetos
  min-height: 250px 
  border 1px solid $dividerColor
  padding 10px
  border-radius 2px
  margin-bottom 20px
  display flex
  align-content: space-between
  
  > .projetos
    width: 47%
    padding: 10px
    > .titulo
      font-size: pt(20px)
      font-family 'lato bold'
      margin-bottom: 10px
      color $darkAccentColor

    > .header
      font-family 'lato regular'
      color: $accentColor 
      display: flex
      align-items: flex-start
      height: 25px
      border-bottom 1px solid $dividerColor
    
    > .items
      font-family 'lato light'
      display: flex
      align-items: flex-start
      padding-top: 10px
    
.containertarefas
  height: 300px
  border 1px solid $dividerColor
  padding 10px
  border-radius 2px
  margin-bottom 20px

  > .titulo
    font-size: pt(20px)
    font-family 'lato bold'
    margin-bottom: 10px
    color $darkAccentColor

  > .items
    max-height: 250px
    overflow-y: auto
    font-family 'lato light'
    display: flex
    flex-wrap: wrap
    border-top 1px solid $dividerColor
    padding-top: 10px

    > .item
      width: 100%
      display: flex
      margin: 10px 0

      > .tags
        display: flex
        flex-wrap: wrap
        justify-content: flex-start
        .tag 
          color: $textPrimaryColor
          height: 20px
          font-size pt(10px)
          text-align: center
          line-height: 20px
          margin-right: 4px
          margin-bottom: 4px
          vertical-align: middle

          border-radius: 4px
          padding: 0px 5px

  > .mensagemAviso
    margin-top 30px
    text-align: center
    font-size: pt(26px)
    color $messageWarn
    font-family 'lato light'

.width70
  width: 70%
.width50
  width: 50%
.width30
  width: 30%
.width20
  width: 20%